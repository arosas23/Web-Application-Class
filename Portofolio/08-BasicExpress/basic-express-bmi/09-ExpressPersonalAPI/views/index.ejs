<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Express test</title>
</head>

<body>
    <% if (error) { %>
        <h3>
            <%= error %>
        </h3>
        <% } %>

            <h2>Register</h2>
            <form action="/greet" method="get">
                Register:
                <input type="text" name="name" id="name" placeholder="Name">
                <input type="submit" value="go next">
            </form>

            <% if (lastName) {%>
                <p>Hi, <%= lastName %>!!</p>
                <% } %>

                    <h3>List of registered people:</h3>
                    <ul>
                        <% if (names.length===0) { %>
                            <li>(No names yet)</li>
                            <% } else { %>
                                <% names.forEach(function(n, i) { %>
                                    <!-- each name is a link = /greet?index=i -->
                                    <li><a href="/greet?index=<%= i %>">
                                            <%= n %>
                                        </a></li>
                                    <% }); %>
                                        <% } %>
                    </ul>

                    <hr />
                    <h2>TODO List</h2>

                    <form action="/task" method="post">
                        <input type="text" name="task" placeholder="Write a task">
                        <input type="submit" value="Add a task">
                    </form>

                    <ul>
                        <% if (tasks.length===0) { %>
                            <li>(No tasks)</li>
                            <% } else { %>
                                <% tasks.forEach(function(t, i) { %>
                                    <li>
                                        <%= t.text %>

                                            <!-- Form para delete -->
                                            <form action="/task/delete" method="post" style="display:inline;">
                                                <input type="hidden" name="index" value="<%= i %>">
                                                <button type="submit">Delete</button>
                                            </form>

                                            <!-- Form to move up -->
                                            <form action="/task/move" method="post" style="display:inline;">
                                                <input type="hidden" name="index" value="<%= i %>">
                                                <input type="hidden" name="direction" value="up">
                                                <button type="submit">↑</button>
                                            </form>

                                            <!-- Form to move down -->
                                            <form action="/task/move" method="post" style="display:inline;">
                                                <input type="hidden" name="index" value="<%= i %>">
                                                <input type="hidden" name="direction" value="down">
                                                <button type="submit">↓</button>
                                            </form>
                                    </li>
                                    <% }); %>
                                        <% } %>
                    </ul>

</body>

</html>